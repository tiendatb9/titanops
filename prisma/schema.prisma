generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- NEXTAUTH (AUTH.JS) MODELS ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  shops         Shop[]
  products      Product[]
  tenantConfig  TenantConfig?
  
  // Subscription Plan (Billing)
  plan          String    @default("FREE") // FREE, PRO, BUSINESS
  planExpires   DateTime?
  
  // Auth Credentials
  password      String?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Configuration for Hybrid Architecture (BYOD)
model TenantConfig {
  id             String   @id @default(cuid())
  userId         String   @unique
  
  // Custom Database Connection
  useCustomDb    Boolean  @default(false)
  dbConnection   String?  // Encrypted Postgres Connection String
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- E-COMMERCE CORE MODELS ---

enum Platform {
  SHOPEE
  TIKTOK
  LAZADA
  TIKI
  SAPO
  PANCAKE
  WOO
  OTHER
}

model Shop {
  id             String   @id @default(cuid())
  userId         String
  name           String
  platform       Platform
  platformShopId String?  // ID của shop trên sàn (vd: shop_id shopee)
  
  // Custom App Credentials (BYOA)
  useCustomApp   Boolean  @default(false)
  appKey         String?  // Partner ID / App Key
  appSecret      String?  // Partner Key / App Secret (Encrypted)
  
  // Credentials (Token)
  credentials    Json?    // { access_token, refresh_token, shop_cipher... }

  // Token Lifecycle Management
  tokenExpiresAt DateTime? // Time when access_token expires
  lastRefreshAt  DateTime? // Last successful refresh time
  
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  listings       Listing[]
  orders         Order[]

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([platform, platformShopId]) // Một shop trên sàn chỉ link 1 lần (hoặc bỏ nếu cho phép trùng)
}

// Product is now the SINGLE source of truth for both Master Items and Variants
// If parentId is NULL -> Master Product
// If parentId is SET -> Variant (Child Product)
model Product {
  id          String   @id @default(cuid())
  userId      String
  
  // Flat SKU Architecture (No Recursive Parent-Child)
  // Each row is a unique SKU/Listing

  name        String
  variantName String?  // Tên phân loại (vd: Màu Xanh, Size L)
  description     String?  @db.Text
  descriptionHtml String?  @db.Text
  images      String[] 
  
  // Categorization
  categoryId  String?
  brand       String?
  
  // SKU & Inventory
  sku         String?  // SKU cá nhân 
  barcode     String?
  status      String   @default("DRAFT")
  
  price       Decimal  @default(0)
  stock       Int      @default(0)
  
  // Specs (Weight usually on Parent, but overrideable)
  weight      Float?
  width       Float?
  height      Float?
  depth       Float?

  rawJson     Json?    // Debugging
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Sourcing Data (Imported from Extension)
  source        String?   // shopee, lazada, tiktok
  sourceId      String?   // item_id (Platform Product ID)
  sourceSkuId   String?   // model_id (Platform Variant ID)
  sourceUrl     String?   // Original URL
  sourceData    Json?     // Raw crawled data
  
  // Extended Platform Data (Refctored for Rich UI)
  originalPrice Decimal?  @default(0)
  promoPrice    Decimal?  @default(0)
  promoId       String?   
  daysToShip    Int?      @default(2)
  platformStatus String?  // NORMAL, BANNED, DELETED

  listings      Listing[] // Linked to platforms
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sku])
}
// Variant Table REMOVED (Merged into Product)

// Listing = Liên kết giữa Variant (Master) và Sản phẩm trên Sàn
model Listing {
  id             String   @id @default(cuid())
  shopId         String
  
  // Link to Product (Parent or Child)
  productId      String?
  product        Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Platform Data
  platformItemId String   // Item ID trên sàn
  platformSkuId  String?  // Model/Variation ID trên sàn
  platformSku    String?  // SKU trên sàn
  
  syncedPrice    Decimal?
  syncedStock    Int?
  
  status         String   
  syncStatus     String   
  lastSyncAt     DateTime?

  shop           Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  
  @@index([shopId, platformItemId])
}

// --- ORDER MANAGEMENT ---

model Order {
  id              String   @id @default(cuid())
  shopId          String
  
  platformOrderId String   // Mã đơn hàng sàn (vd: 230910ABCXYZ)
  orderStatus     String   // UNPAID, READY_TO_SHIP, SHIPPED, COMPLETED, CANCELLED
  
  totalAmount     Decimal
  customerName    String?
  shippingAddress String?  @db.Text
  
  items           OrderItem[]
  
  createdAt       DateTime @default(now()) // Thời điểm tạo đơn trên hệ thống
  orderDate       DateTime // Thời điểm khách đặt trên sàn
  updatedAt       DateTime @updatedAt
  
  shop            Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, platformOrderId])
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  
  listingId       String?  // Link tới listing nếu tìm thấy
  productName     String
  sku             String?  // SKU trên đơn
  quantity        Int
  price           Decimal
  
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Brand {
  id               Int      @id @default(autoincrement())
  shopeeBrandId    BigInt   @unique
  name             String
  originalName     String?
  displayBrandName String?
  categoryId       BigInt?  
  
  updatedAt        DateTime @updatedAt
  
  @@index([categoryId])
  @@index([name])
  @@map("brands")
}
